<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Length"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/darkgrey"
            >

            <TextView
                android:id="@+id/unitDropdown"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="m"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                />

            <TextView
                android:id="@+id/convertField"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_rowSpan="1"
                android:layout_columnWeight="3"
                android:layout_columnSpan="3"
                android:gravity="center|end"
                android:text="0"
                android:textAllCaps="false"
                android:autoSizeTextType="uniform"
                android:maxLength="9"
                android:maxLines="1"
                android:textColor="@color/white"
                />

        </GridLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:fillViewport="true"
            >
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="1000dp"
                android:layout_marginRight="10dp"
                android:columnCount="4"
                >

                <TextView
                    android:id="@+id/titleMeter"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="4"
                    android:layout_columnSpan="4"
                    android:gravity="center"
                    android:text="meter"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/lightgrey"
                    />
                <TextView
                    android:id="@+id/unitMeter"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="1"
                    android:gravity="center|start"
                    android:text="m"
                    android:textStyle="bold"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    />
                <TextView
                    android:id="@+id/numberMeter"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="3"
                    android:layout_columnSpan="3"
                    android:gravity="center|end"
                    android:text="0"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    />
                <TextView
                    android:id="@+id/titleKilometer"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="4"
                    android:layout_columnSpan="4"
                    android:gravity="center"
                    android:text="kilometer"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/lightgrey"
                    />
                <TextView
                    android:id="@+id/unitKilometer"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="1"
                    android:gravity="center|start"
                    android:text="km"
                    android:textStyle="bold"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"

                    />
                <TextView
                    android:id="@+id/numberKilometer"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="3"
                    android:layout_columnSpan="3"
                    android:gravity="center|end"
                    android:text="0"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"

                    />
                <TextView
                    android:id="@+id/titleCentimeter"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="4"
                    android:layout_columnSpan="4"
                    android:gravity="center"
                    android:text="centimeter"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/lightgrey"
                    />
                <TextView
                    android:id="@+id/unitCentimeter"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="1"
                    android:gravity="center|start"
                    android:text="cm"
                    android:textStyle="bold"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    />
                <TextView
                    android:id="@+id/numberCentimeter"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="3"
                    android:layout_columnSpan="3"
                    android:gravity="center|end"
                    android:text="0"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    />
                <TextView
                    android:id="@+id/titleMillimeter"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="4"
                    android:layout_columnSpan="4"
                    android:gravity="center"
                    android:text="millimeter"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/lightgrey"
                    />
                <TextView
                    android:id="@+id/unitMillimeter"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="1"
                    android:gravity="center|start"
                    android:text="mm"
                    android:textStyle="bold"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    />
                <TextView
                    android:id="@+id/numberMillimeter"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="3"
                    android:layout_columnSpan="3"
                    android:gravity="center|end"
                    android:text="0"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    />
                <TextView
                    android:id="@+id/titleMile"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="4"
                    android:layout_columnSpan="4"
                    android:gravity="center"
                    android:text="mile"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/lightgrey"
                    />
                <TextView
                    android:id="@+id/unitMile"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="1"
                    android:gravity="center|start"
                    android:text="mi"
                    android:textStyle="bold"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    />
                <TextView
                    android:id="@+id/numberMile"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="3"
                    android:layout_columnSpan="3"
                    android:gravity="center|end"
                    android:text="0"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    />
                <TextView
                    android:id="@+id/titleNMile"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="4"
                    android:layout_columnSpan="4"
                    android:gravity="center"
                    android:text="nautical mile"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/lightgrey"
                    />
                <TextView
                    android:id="@+id/unitNMile"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="1"
                    android:gravity="center|start"
                    android:text="nmi"
                    android:textStyle="bold"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    />
                <TextView
                    android:id="@+id/numberNMile"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="3"
                    android:layout_columnSpan="3"
                    android:gravity="center|end"
                    android:text="0"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    />
                <TextView
                    android:id="@+id/titleYard"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="4"
                    android:layout_columnSpan="4"
                    android:gravity="center"
                    android:text="yard"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/lightgrey"
                    />
                <TextView
                    android:id="@+id/unitYard"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="1"
                    android:gravity="center|start"
                    android:text="yd"
                    android:textStyle="bold"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    />
                <TextView
                    android:id="@+id/numberYard"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="3"
                    android:layout_columnSpan="3"
                    android:gravity="center|end"
                    android:text="0"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    />
                <TextView
                    android:id="@+id/titleFoot"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="4"
                    android:layout_columnSpan="4"
                    android:gravity="center"
                    android:text="foot"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/lightgrey"
                    />
                <TextView
                    android:id="@+id/unitFoot"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="1"
                    android:gravity="center|start"
                    android:text="ft"
                    android:textStyle="bold"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    />
                <TextView
                    android:id="@+id/numberFoot"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="3"
                    android:layout_columnSpan="3"
                    android:gravity="center|end"
                    android:text="0"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"

                    />
                <TextView
                    android:id="@+id/titleInch"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="4"
                    android:layout_columnSpan="4"
                    android:gravity="center"
                    android:text="inch"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/lightgrey"
                    />
                <TextView
                    android:id="@+id/unitInch"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="1"
                    android:gravity="center|start"
                    android:text="in"
                    android:textStyle="bold"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    />
                <TextView
                    android:id="@+id/numberInch"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_columnWeight="3"
                    android:layout_columnSpan="3"
                    android:gravity="center|end"
                    android:text="0"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    />


            </GridLayout>

        </ScrollView>

    </LinearLayout>

    <!-- Set visible when choosing unit (click unit button) -->
    <LinearLayout
        android:id="@+id/unitsLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible"
        android:background="@color/white"
        android:weightSum="9"
        >

        <Button
            android:id="@+id/buttonMeter"
            style="@style/ButtonStandard"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="m"
            />
        <Button
            android:id="@+id/buttonKiloMeter"
            style="@style/ButtonStandard"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="km"
            />
        <Button
            android:id="@+id/buttonCentiMeter"
            style="@style/ButtonStandard"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="cm"
            />
        <Button
            android:id="@+id/buttonMiliMeter"
            style="@style/ButtonStandard"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="mm"
            />
        <Button
            android:id="@+id/buttonMile"
            style="@style/ButtonStandard"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="mi"
            />
        <Button
            android:id="@+id/buttonNMile"
            style="@style/ButtonStandard"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="nmi"
            />
        <Button
            android:id="@+id/buttonYard"
            style="@style/ButtonStandard"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="yd"
            />
        <Button
            android:id="@+id/buttonFoot"
            style="@style/ButtonStandard"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="ft"
            />
        <Button
            android:id="@+id/buttonInch"
            style="@style/ButtonStandard"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="in"
            />

    </LinearLayout>

    <!-- Set visible when writing number (click number TextView) -->
    <LinearLayout
        android:id="@+id/numbersLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible"
        android:gravity="bottom"
        android:weightSum="10">

        <!-- for extra spacing from top-->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:background="@color/white"
            android:columnCount="3">

            <Button
                android:id="@+id/button7"
                style="@style/ButtonStandard"
                android:text="7" />

            <Button
                android:id="@+id/button8"
                style="@style/ButtonStandard"
                android:text="8" />

            <Button
                android:id="@+id/button9"
                style="@style/ButtonStandard"
                android:text="9" />

            <Button
                android:id="@+id/button4"
                style="@style/ButtonStandard"
                android:text="4" />

            <Button
                android:id="@+id/button5"
                style="@style/ButtonStandard"
                android:text="5" />

            <Button
                android:id="@+id/button6"
                style="@style/ButtonStandard"
                android:text="6" />

            <Button
                android:id="@+id/button1"
                style="@style/ButtonStandard"
                android:text="1" />

            <Button
                android:id="@+id/button2"
                style="@style/ButtonStandard"
                android:text="2" />

            <Button
                android:id="@+id/button3"
                style="@style/ButtonStandard"
                android:text="3" />

            <Button
                android:id="@+id/button0"
                style="@style/ButtonStandard"
                android:text="0" />

            <Button
                android:id="@+id/buttonDot"
                style="@style/ButtonStandard"
                android:text="." />

            <Button
                android:id="@+id/buttonC"
                style="@style/ButtonStandard"
                android:text="C" />

            <Button
                android:id="@+id/buttonOK"
                style="@style/ButtonStandard"
                android:layout_columnSpan="3"
                android:layout_columnWeight="3"
                android:text="OK"
                />

        </GridLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

